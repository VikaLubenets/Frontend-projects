{
  "compilerOptions": {
    "target": "ES2021",                                 
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "skipLibCheck": true,
    "noImplicitAny": true,
    "module": "commonjs", 
    "resolveJsonModule": true,
    "baseUrl": "./src"                    
  },

  "include": [
    "src/**/*.ts"
  ]
}